// Place your settings in this file to overwrite the default settings
{
    "window.zoomLevel": 2,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/*.meta": true,
        "**/.*.meta": true,
        "**/node_modules": true
    },
    "editor.fontFamily": "'Source Code Pro for Powerline', 'Droid Sans Mono'",
    "vim.disableAnnoyingNeovimMessage": true,
    "vim.useSystemClipboard": true,
    "vim.easymotion": true,
    "vim.easymotionKeys": "hklyuiopnm,qwertzxcvbasdgjf;"
}
